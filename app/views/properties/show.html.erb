<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= number_with_delimiter(@property.rent.to_s) %><%= "円" %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %><%= "年" %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<hr>
<% count = 1 %>
<% @stations.each do |station| %>
  <% unless station.name == "" %>
    <h3><%= "最寄り駅#{count}" %></h3>

    <p>
      <strong>路線名:</strong>
      <%= station.route_name %>
    </p>

    <p>
      <strong>駅名:</strong>
      <%= station.name %>
    </p>

    <p>
      <strong>徒歩分数:</strong>
      <%= station.walking_minutes %><%= "分" %>
    </p>

    <% count += 1 %>
  <% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
